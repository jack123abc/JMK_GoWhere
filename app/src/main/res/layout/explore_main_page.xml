<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/txtHotSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:text="Hot Search"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/exploreRecyclerview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.069" />

            <LinearLayout
                android:id="@+id/linHotSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/exploreRecyclerview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtHotSearch"
                app:layout_constraintVertical_bias="0.13"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/imgHotSearch1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/imgHotSearch3"
                    app:srcCompat="@color/colorHighlighting"
                    tools:layout_editor_absoluteY="54dp" />

                <ImageView
                    android:id="@+id/imgHotSearch2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/imgHotSearch4"
                    app:srcCompat="@color/colorHighlighting"
                    tools:layout_editor_absoluteY="54dp" />

                <ImageView
                    android:id="@+id/imgHotSearch3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@color/colorHighlighting"
                    tools:layout_editor_absoluteY="54dp" />

                <ImageView
                    android:id="@+id/imgHotSearch4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@color/colorHighlighting"
                    tools:layout_editor_absoluteY="54dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exploreRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>