<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Category"
        android:textColor="#000000"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hotsearch1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/hotsearch2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotsearch1"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/hotsearch3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotsearch2"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/hotsearchtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="體驗"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hotsearch1"
        app:layout_constraintEnd_toEndOf="@+id/hotsearch1"
        app:layout_constraintStart_toStartOf="@+id/hotsearch1"
        app:layout_constraintTop_toTopOf="@+id/hotsearch1" />

    <TextView
        android:id="@+id/hotsearchtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手工"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hotsearch2"
        app:layout_constraintEnd_toEndOf="@+id/hotsearch2"
        app:layout_constraintStart_toStartOf="@+id/hotsearch2"
        app:layout_constraintTop_toTopOf="@+id/hotsearch2" />

    <TextView
        android:id="@+id/hotsearchtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="休閒"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hotsearch3"
        app:layout_constraintEnd_toEndOf="@+id/hotsearch3"
        app:layout_constraintStart_toStartOf="@+id/hotsearch3"
        app:layout_constraintTop_toTopOf="@+id/hotsearch3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Keywords"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotsearch3" />

</android.support.constraint.ConstraintLayout>